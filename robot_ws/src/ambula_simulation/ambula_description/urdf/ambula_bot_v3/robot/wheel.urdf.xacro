<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="wheel" params="side radius width pos_x pos_y pos_z mass">
        <link name="${side}_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="${-pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://ambula_description/meshs/wheel.stl" scale="1 1 1"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${-pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://ambula_description/meshs/wheel.stl" scale="1 1 1"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="${mass}"/>
            <inertia
                ixx="${(1/12)*mass*(3*radius*radius + width*width)}" ixy="0" ixz="0"
                iyy="${(1/2)*mass*(radius*radius)}" iyz="0"
                izz="${(1/12)*mass*(3*radius*radius + width*width)}"/>
            </inertial>

        </link>

        <joint name="${side}_wheel_joint" type="continuous">
            <axis xyz="0 1 0" />
            <parent link="${side}_knee_link"/>
            <child link="${side}_wheel_link"/>
            <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0"/>
            <dynamics damping="0.01" friction="0.0"/>
        </joint>
    </xacro:macro>
</robot>